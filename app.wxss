/**app.wxss**/
@import "/style/weui.wxss";
@import "/wxParse/wxParse.wxss";
.w-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.main-container{
	min-height: 100vh;
	background-color:#f0f0f0;
	color:#333;
}

.navigator-hover{
	background: rgba(255,255,255,0.6);
}

.search-bar{
	background:#f60;
	padding:0 30rpx 30rpx;
}
.search-bar .bar{
	display:flex;
	justify-content: center;
	align-items:center;
	height:40px;
	background:#fff;
	border-radius:20px;
}
.search-bar .bar .search{
	width: 16px;
	height: 16px;
}
.search-bar .bar .placeholder{
	width:84%;
	color:#999;
	text-indent:10px;
	font-size:10pt;
}

.hot-box{
	display:flex;
	justify-content:center;
	flex-wrap:wrap;
	padding:50rpx 0;
}
.hot-word{
	font-size:12pt;
	padding:0 10pt;
	height:30px;
	line-height:30px;
	margin: 10rpx;
	border:1px solid #eee;
	background:#fff;
	color:#666;
}

.dropdown{
	position: fixed;
	top:0;
	left: 0;
	width: 100vw;
	z-index: 99;
}

.dropdown .menu{
	display:flex;
	width:100vw;
	height:40px;
	line-height:40px;
	background:#fff;
	font-size: 11pt;
	border-bottom: 1px solid #f0f0f0;
}
.dropdown .menu .item{
	flex:1;
	height:40px;
	line-height:40px;
	text-align: center;
}
.dropdown .menu .item.active{
	color:#333;
	background:#f0f0f0;
}
.dropdown .menu .item .down-icon{
	width: 8px;
	height: 8px;
	margin-left:4px;
	transform:rotate(0deg);
}
.dropdown .menu .item .down-icon.active{
	transform:rotate(180deg);
}

.dropdown .dropdown-list{
	height: 50vh;
	background-color: #fff;
	font-size: 11pt;
}
.weui-cell:before{
	border-top-color:#f0f0f0;
}
.btn-box{
	background:#fff;
	padding:0 10px;
	border-top: 1px solid #f0f0f0;
	border-bottom: 1px solid #f0f0f0;
}
.btn-box .weui-flex__item{
	padding:10px;
}
.btn-box .weui-btn{
	width: 100%;
	height:40px;
	line-height:40px;
}

.has-dropdown{
	height: calc( 100vh - 40px );
	margin-top: 50px;
}
.has-search{
	height: calc( 100vh - 47px );
	margin-top: 47px;
}
.weui-search-bar{
	position:fixed;
	width:100%;
}

.no-result{
	display:flex;
	justify-content:center;
	align-items:center;
	height:calc( 100vh - 40px );
	background:#fff;
}
.no-result image{
	width:80vw;
	height: 60vw;
}

.import{
	color:#ff9b59;
	padding:0 2px;
}

.copy-right{
	padding:20rpx 0;
	background:#fff;
	margin-top:10px;
	color:#666;
	text-align:center;
	font-size:8pt;
}

.white-bg{
	background:#fff;
}

.no-scroll:before{
	content:'';
	background-color: rgba(0,0,0,.6);
	position:absolute;
	left:0;
	top:0;
	width: 100%;
	height: 100%;
	z-index: 9;
}


.event-item{
	position:relative;
	margin:0 30rpx;
	overflow: hidden;
	text-align:justify;
	border-bottom:1px solid #f0f0f0;
}
.event-item navigator{
	padding:30rpx 0;
}
.event-item:last-child{
	border-bottom:none;
}
.event-item .thumb{
	float: left;
	width: 100rpx;
	height: 100rpx;
	margin-right: 30rpx;
	overflow:hidden;
	border:1px solid #f0f0f0;
}
.event-item .thumb image{
	width: 100rpx;
	height: 100rpx;
}
.event-item .title{
	font-size: 11pt;
}
.event-item .tag{
	color: #f60;
	font-size:10pt;
	margin-top:10px;
}
.event-item .date{
	position:absolute;
	right:0;
	bottom:30rpx;
	font-size:8pt;
	color:#999;
	margin-top:5px;
	text-align:right;
}

.company-item{
	background:#fff;
	margin:30rpx;
	padding-bottom: 30rpx;
	border-bottom:1px solid #f0f0f0;
	overflow:hidden;
}
.company-item:last-child{
	border-bottom:none;
}
.company-item .thumb{
	float:left;
	display:flex;
	justify-content: center;
	align-items: center;
	width: 140rpx;
	height: 140rpx;
	margin-right:15rpx;
	border:1px solid #f0f0f0;
	overflow:hidden;
}

.company-item .thumb image{
	width:140rpx;
	height:140rpx;
}
.company-item .box{
	float:right;
	width: 520rpx;
	font-size:9pt;
	color: #999;
	position:relative;
}

.company-item .box .title{
	font-size:12pt;
	color:#303030;
	font-weight:bold;
	margin-bottom: 10rpx;
}
.company-item .box .line{
	line-height: 50rpx;
}
.company-item .box .line .team,.company-item .box .line .city{
	display:inline-block;
	margin-right:10px;
}
.company-item .box .line .team .icon{
	width:9px;
	height:10px;
	margin-right:3px;
}
.company-item .box .line .city .icon{
	width:8px;
	height:10px;
	margin-right:3px;
}
.company-item .box .stage{
	position:absolute;
	top:0;
	right:0;
	font-size:8pt;
}




.vpeople-item{
	background:#fff;
	margin:30rpx 20rpx;
	padding-bottom: 30rpx;
	border-bottom:1px solid #f0f0f0;
}
.vpeople-item:last-child{
	border-bottom:none;
}
.vpeople-item .thumb{
	float:left;
	display:flex;
	justify-content: center;
	align-items: center;
	width: 140rpx;
	height: 140rpx;
	margin-right:15rpx;
	overflow:hidden;
	border-radius:50%;
}

.vpeople-item .thumb image{
	width:140rpx;
	height:140rpx;
}
.vpeople-item .box{
	float:right;
	width: 540rpx;
	font-size:9pt;
	color: #999;
	position:relative;
}
.vpeople-item .box .title{
	width:70%;
	height:30px;
	line-height:30px;
	overflow:hidden;
	text-overflow:ellipsis;
	font-size:12pt;
	color:#303030;
	font-weight:bold;
	margin-bottom: 10rpx;
}
.vpeople-item .box .line{
	line-height: 50rpx;
}
.vpeople-item .box .stage{
	position:absolute;
	top:0;
	right:0;
	font-size:8pt;
}




.rongzi-item{
	position:relative;
	margin:0 30rpx;
	font-size:11pt;
	line-height:1.8;
	color:#333;
	padding:30rpx 0;
	border-bottom:1px dashed #f0f0f0;
}
.rongzi-item .stage{
	float:left;
	display:flex;
	align-items:center;
	justify-content:center;
	width:160rpx;
	height:160rpx;
	border:1px solid #f60;
	color:#f60;
	border-radius:50%;
	font-size:10pt;
	text-align:center;
	margin-right:40rpx;
}
.rongzi-item .other{
	color:#666;
	font-size:10pt;
}
.rongzi-item .other .line{
	position:relative;
	padding-left: 24px;
	margin-top: 3px;
}
.rongzi-item .other .line:first-child{
	margin-top:0;
}
.rongzi-item .other .icon{
	position:absolute;
	left:0;
	top:4px;
	width:14px;
	height:14px;
	background-size:14px 14px;
	margin-right:5px;
}



.case-item{
	position:relative;
	margin:0 30rpx;
	font-size:11pt;
	line-height:1.8;
	color:#333;
	padding:30rpx 0;
	border-bottom:1px dashed #f0f0f0;
}
.case-item .thumb{
	float:left;
	display:flex;
	align-items:center;
	justify-content:center;
	width:160rpx;
	height:160rpx;
	border:1px solid #f0f0f0;
	color:#f60;
	font-size:10pt;
	text-align:center;
	margin-right:30rpx;
}
.case-item .thumb image{
	width:160rpx;
	height:160rpx;
}
.case-item .other{
	color:#666;
	font-size:10pt;
}
.case-item .other .line{
	position:relative;
	padding-left: 24px;
	margin-top: 3px;
}
.case-item .other .line.big{
	font-size:13pt;
	padding-left:0;
	color:#333;
	font-weight:bold;
}
.case-item .other .line:first-child{
	margin-top:0;
	line-height:1.2;
	margin-bottom:10px;
}
.case-item .other .icon{
	position:absolute;
	left:0;
	top:4px;
	width:14px;
	height:14px;
	background-size:14px 14px;
	margin-right:3px;
}







